@using ASP.Server.Controllers
@model modifyBookModel
@{
    ViewData["Title"] = "Modify a book";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f3f3f3;
    }

    form {
        width: 50%;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom:70px;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .input-group {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    input, textarea, select {
        width: 80%;
        height: 40px;
        padding: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    label {
        width: 10%;
        text-align: right;
        padding-right: 10px;
        font-size: 14px;
    }

    textarea {
        height: 100px;
    }

    input[type="submit"] {
        width: 100%;
        height: 40px;
        margin-top: 50px;
        background-color: forestgreen;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        input[type="submit"]:hover {
            background-color: darkgreen;
        }

    p {
        font-size: 10px;
        color: red;
        font-weight: bold;
    }
</style>

<h1>Modify book</h1>
<form asp-controller="Book" asp-action="Modify">
    <input type="hidden" value="@Model.Id" name="idtomodify" />
    <div class="input-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" value="@Model.Name" />
    </div>
    <div class="input-group">
        <label asp-for="Author">Author:</label>
        <input asp-for="Author" value="@Model.Author" />
    </div>
    <div class="input-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" value="@Model.Price" />
    </div>
    <div class="input-group">
        <label asp-for="Content">Content:</label>
        <textarea asp-for="Content">@Model.Content</textarea>
    </div>
    <p>Sélectionnez les genres avec (CTRL + clic).</p>
    <div class="input-group">
        <label asp-for="Genres">Genres:</label>
        <select asp-for="Genres" asp-items="@(new SelectList(Model.AllGenres, "Id", "Name"))" multiple></select>
    </div>
    <input type="submit" value="Update" />
</form>
