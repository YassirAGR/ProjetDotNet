@using ASP.Server.Controllers
@model CreateGenreModel
@{
    ViewData["Title"] = "Add a genre";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f3f3f3;
    }

    form {
        width: 50%;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .input-group {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    input {
        width: 80%;
        height: 40px;
        padding: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    label {
        width: 10%;
        text-align: right;
        padding-right: 10px;
        font-size: 14px;
    }

    input[type="submit"] {
        width: 100%;
        height: 40px;
        margin-top: 50px;
        background-color: forestgreen;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    input[type="submit"]:hover {
        background-color: darkgreen;
    }



</style>


<h1>Add a genre</h1>
<form asp-controller="Genre" asp-action="Create">
    <div class="input-group">
        <label asp-for="Name">Genre:</label>
        <input asp-for="Name" />
    </div>
    <input type="submit" value="Add" />
</form>
