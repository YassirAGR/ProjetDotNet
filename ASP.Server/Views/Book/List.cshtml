@using ASP.Server.Models
@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f3f3f3;
    }

    .listeBooks {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .listeBooks h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    th,
    td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: black ;
        color: #fff;
        font-weight: bold;
    }

    td {
        background-color: #fff;
    }

    .txt {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }


    ul {
        padding: 0;
        margin: 0;
    }

        ul li {
            list-style: none;
        }

    form {
        margin: 0;
        padding: 0;
    }

 

    input[type="submit"] {
        padding: 8px 16px;
        background-color: dimgrey;
        border: none;
        color: #fff;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<div class="listeBooks">
    <h1>List of books</h1>
    <table>
        <thead>
            <tr>
                <th scope="col">Author</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Content</th>
                <th scope="col">Genre</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Author</td>
                    <td>@book.Name</td>
                    <td>@book.Price</td>
                    <td class="txt">
                        @if (!string.IsNullOrEmpty(book.Content))
                        {
                            string[] words = book.Content.Split(' ');
                            if (words.Length > 20)
                            {
                                string shortenedContent = string.Join(" ", words.Take(20)) + "...";
                                @shortenedContent
                            }
                            else
                            {
                                @book.Content
                            }
                        }
                    </td>
                    <td>
                        <ul>
                            @foreach (var genre in book.Genres)
                            {
                                <li>@genre.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <form asp-controller="Book" asp-action="Delete" method="post" style="display: inline;">
                            <input type="hidden" asp-for="@book.Id" name="id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <form asp-controller="Book" asp-action="Modify" method="post" style="display: inline;">
                            <input type="hidden" asp-for="@book.Id" name="idtomodify">
                            <button type="submit" class="btn btn-primary">Modify</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
